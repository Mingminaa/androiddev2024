<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/forecastFragment"
    tools:context=".ForecastFragment">

    <LinearLayout
        android:layout_width="@dimen/layout_width"
        android:layout_height="382dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Mon"
                android:layout_width="@dimen/textday_width"
                android:layout_height="@dimen/textday_height"
                android:gravity="center"
                android:text="@string/mon" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_weight="1"
                android:src="@drawable/ic_rain" />

            <LinearLayout
                android:layout_width="@dimen/doubletext_width"
                android:layout_height="@dimen/layout_height"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inner_height"
                    android:layout_weight="1"
                    android:text="@string/scatter" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/scatter_temp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Tue"
                android:layout_width="@dimen/textday_width"
                android:layout_height="@dimen/textday_height"
                android:gravity="center"
                android:text="@string/tue" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_weight="1"
                android:src="@drawable/ic_thunder" />

            <LinearLayout
                android:layout_width="@dimen/doubletext_width"
                android:layout_height="@dimen/doubletext_height"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inner_height"
                    android:layout_weight="1"
                    android:text="@string/thunder" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/thunder_temp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Wed"
                android:layout_width="@dimen/textday_width"
                android:layout_height="@dimen/textday_height"
                android:gravity="center"
                android:text="@string/wed" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_weight="1"
                android:src="@drawable/ic_cloudy" />

            <LinearLayout
                android:layout_width="@dimen/doubletext_width"
                android:layout_height="@dimen/doubletext_height"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inner_height"
                    android:layout_weight="1"
                    android:text="@string/cloudy" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cloudy_temp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Thurs"
                android:layout_width="@dimen/textday_width"
                android:layout_height="@dimen/textday_height"
                android:gravity="center"
                android:text="@string/thurs" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_weight="1"
                android:src="@drawable/ic_clear" />

            <LinearLayout
                android:layout_width="@dimen/doubletext_width"
                android:layout_height="@dimen/doubletext_height"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inner_height"
                    android:layout_weight="1"
                    android:text="@string/clearsky" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clear_temp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Fri"
                android:layout_width="@dimen/textday_width"
                android:layout_height="@dimen/textday_height"
                android:gravity="center"
                android:text="@string/fri" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_weight="1"
                android:src="@drawable/ic_sunny" />

            <LinearLayout
                android:layout_width="@dimen/doubletext_width"
                android:layout_height="@dimen/doubletext_height"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inner_height"
                    android:layout_weight="1"
                    android:text="@string/sunny" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sun_temp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Sat"
                android:layout_width="@dimen/textday_width"
                android:layout_height="@dimen/textday_height"
                android:gravity="center"
                android:text="@string/sat" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_weight="1"
                android:src="@drawable/ic_clear" />

            <LinearLayout
                android:layout_width="@dimen/doubletext_width"
                android:layout_height="@dimen/doubletext_height"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inner_height"
                    android:layout_weight="1"
                    android:text="@string/clearsky" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clear_temp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Sun"
                android:layout_width="@dimen/textday_width"
                android:layout_height="@dimen/textday_height"
                android:gravity="center"
                android:text="@string/sun" />

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_weight="1"
                android:src="@drawable/ic_thunder" />

            <LinearLayout
                android:layout_width="@dimen/doubletext_width"
                android:layout_height="@dimen/doubletext_height"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inner_height"
                    android:layout_weight="1"
                    android:text="@string/thunder" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/thunder_temp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>